{% extends 'base.html.twig' %}

{% block title %}Echoes Bible | Sign Up{% endblock %}

{% block scripts %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
{% endblock %}

{% block styles %}
    {{ parent() }}
    <script src="{{ asset('js/base.js') }}"></script>
    <script src="{{ asset('js/create-account/create-account-page.js') }}" type="module"></script>
{% endblock %}

{% block body %}
    <div class="echoesOrangeBg">
        <div class="container">
            <br>
            <br>
            <br>
            <br>
            <div class="card" style="max-width: 700px; margin: auto;">
                <div class="card-body pad25">

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <label for="firstName">
                                <b>First Name</b>
                            </label>
                            <br>
                            <input id="firstName" class="form-control">
                            <br>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label for="lastName">
                                <b>Last Name</b>
                            </label>
                            <br>
                            <input id="lastName" class="form-control">
                            <br>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label for="email">
                                <b>Email</b>
                            </label>
                            <br>
                            <input id="email" class="form-control">
                            <br>
                        </div>
                        <div class="col-xs-12 col-sm-12">
                            <label for="password">
                                <b>Password</b>
                            </label>
                            <br>
                            <input id="password" type="password" class="form-control">
                            <br>
                        </div>
                        <div class="col-xs-12 col-sm-12">
                            <label for="confirmPassword">
                                <b>Confirm Password</b>
                            </label>
                            <br>
                            <input id="confirmPassword" type="password" class="form-control">
                            <br>
                        </div>
                    </div>
                    <br>
                    <button id="createAccountButton" class="btn-lg btn btn-primary btn-block width100">
                        Create Account
                    </button>
                    <br>
                    <br>
                    <p>
                        Already have an account? <a href="/login">Login</a>
                    </p>
                </div>
            </div>
        </div>
        <div style="min-height: 200px;"></div>
    </div>
{% endblock %}
